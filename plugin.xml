<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin 
  xmlns="http://www.phonegap.com/ns/plugins/1.0" 
  xmlns:android="http://schemas.android.com/apk/res/android" 
  xmlns:amazon="http://schemas.android.com/apk/lib/com.amazon.device.ads" 
  xmlns:rim="http://www.blackberry.com/ns/widgets" id="add-user-certificates" version="1.0.0">
  <name>add-user-certificates</name>
  <description>A plugin to customize the Android network security configuration.</description>
  <license>MIT</license>
  <engines>
    <engine name="cordova" version=">=6.4.0"/>
    <engine name="cordova-android" version=">=6.0.0"/>
  </engines>
      <platform name="android">
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <meta-data android:name="android.security.net.config" android:resource="@xml/network_security_config"/>
        </config-file>

        
        <!--<hook type="after_platform_add" src="hooks/copy_config.js" />-->
        <!--<hook type="after_prepare" src="hooks/update_network_security_new.js" />-->
        <hook type="after_compile" src="hooks/update_network_security_new.js" />
        <!--<resource-file src="res/xml/network_security_config.xml" target="res/xml/network_security_config.xml" />-->
    </platform>

  
</plugin>
